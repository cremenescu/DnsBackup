# reset_dns_zones.ps1
# Șterge toate zonele DNS definite în registry și fișierele .dns corespunzătoare,
# apoi recreează zonele existente în serverul DNS folosind configurația curentă activă

# Verifică permisiuni administrative
if (-not ([Security.Principal.WindowsPrincipal] [Security.Principal.WindowsIdentity]::GetCurrent()).IsInRole('Administrator')) {
    Write-Host "[ERROR] Scriptul trebuie rulat ca Administrator." -ForegroundColor Red
    exit 1
}

Write-Host "[INFO] Încep ștergerea zonelor din registry și fișierele .dns..." -ForegroundColor Cyan

# 1. Șterge zonele din registry (definiții rămase)
$zonesKey = "HKLM:\SOFTWARE\Microsoft\Windows NT\CurrentVersion\DNS Server\Zones"
if (Test-Path $zonesKey) {
    Get-ChildItem -Path $zonesKey | ForEach-Object {
        Write-Host " - Șterg din registry: $($_.PSChildName)"
        Remove-Item -Path $_.PSPath -Recurse -Force
    }
} else {
    Write-Host "[INFO] Cheia registry pentru zone DNS nu există (posibil deja curatată)."
}

# 2. Șterge fișierele .dns corespunzătoare (exceptând cache și TrustAnchors)
$dnsPath = "$env:SystemRoot\System32\dns"
Get-ChildItem -Path $dnsPath -Filter "*.dns" | Where-Object {
    $_.BaseName -notin @("cache", "TrustAnchors")
} | ForEach-Object {
    Write-Host " - Șterg fișier: $($_.Name)"
    Remove-Item $_.FullName -Force
}

# 3. Reconfigurează zonele din serverul DNS activ (nu atinge fișierele șterse anterior)
Write-Host "[INFO] Reimport zonele active din configurația DNS Server (live)..." -ForegroundColor Cyan
$zones = Get-DnsServerZone
foreach ($zone in $zones) {
    if ($zone.ZoneType -eq 'Primary') {
        Write-Host " - Reconfigurare zonă primară: $($zone.ZoneName)"
        Remove-DnsServerZone -Name $zone.ZoneName -Force
        Add-DnsServerPrimaryZone -Name $zone.ZoneName -DynamicUpdate None
    } elseif ($zone.ZoneType -eq 'Secondary') {
        Write-Host " - Reconfigurare zonă secundară: $($zone.ZoneName)"
        $masters = ($zone | Get-DnsServerZoneTransferPolicy).ZoneTransferClients
        Remove-DnsServerZone -Name $zone.ZoneName -Force
        Add-DnsServerSecondaryZone -Name $zone.ZoneName -MasterServers $masters
    }
}

Write-Host "[✓] Resetare completă a zonelor DNS finalizată." -ForegroundColor Green
